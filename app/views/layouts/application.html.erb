      <div class="row">
        <div class="col-lg-12">
          <div ng-view></div>
          <%#= yield %>        
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/vendor.js"></script>
    <script type="text/javascript" src="/templates.js"></script>
    <script type="text/javascript" src="/app.js"></script>
  </body>
</html>
